<UserControl x:Class="MesserSmashGameLauncher.LogoutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MesserSmashGameLauncher"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <DockPanel x:Name="ContentRoot">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Label Content="{Binding local:Model.Instance, Path=UserName}" />
            <Button Width="100" Height="25"  Click="Button_Click">Logout</Button>
        </StackPanel>
        <Button Name="playButton" DockPanel.Dock="Right" Content="PLAY!" Width="125" Margin="10" Click="PlayButtonClicked"/>
        <StackPanel DockPanel.Dock="Left" >
            <ProgressBar Name="progressbar"  Width="300" Height="20" Value="45" Background="#FF5C1C1C" />
            <Label Name="status"  HorizontalAlignment="Center" Content="STATUS: Updating game files" />
            <Label Name="version" HorizontalAlignment="Center" Content="Version: 0.0003" />
        </StackPanel>
    </DockPanel>
</UserControl>
